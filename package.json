{
  "name": "clean-archi-express",
  "version": "1.0.0",
  "description": "Backend using clean architeture and dependancy injection",
  "license": "ISC",
  "author": "Antoine TSINGA",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest run",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec tsx ./src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/src/index.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-istanbul": "^4.0.13",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "fast-glob": "^3.3.3",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "string-width": "^8.1.0",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.27",
    "zod": "^4.1.12"
  }
}
